<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5fb0c9"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
            android:visibility="invisible"
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:text="Booking Confirmation"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Booking Date: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_booking_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="13/05/2016"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Booking time: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_booking_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="07:25"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Pick Town: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_pick_town"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Kolkata"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Pick Address: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_pick_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Salt Lake"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Drop Town: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_drop_town"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@android:color/holo_red_dark"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Delhi"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Drop Address: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_drop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="New Delhi"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Amount: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_amount"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="$200"/>
                    <TextView
                        android:id="@+id/txt_user_paymentmode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:gravity="center_vertical"
                        android:layout_alignBottom="@+id/txt_user_amount"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:layout_marginLeft="167dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="No. of Passenger: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_passenger_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="155dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="4"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Driver Note: "
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/txt_user_drivernote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="122dp"
                        android:textColor="@android:color/black"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:text="Don't drink and drive"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_user_login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_user_password"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <Button
                        android:id="@+id/btn_user_back_confirmation"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:theme="@style/OrangeButton"
                        android:text="Back"
                        android:textAlignment="center"
                        />

                    <Button
                        android:id="@+id/btn_user_confirm_booking"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:theme="@style/OrangeButton"
                        android:text="confirm"
                        android:textAlignment="center"
                        />

                </RelativeLayout>

                <WebView
                    android:visibility="gone"
                    android:id="@+id/webView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</ScrollView>