<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fb0c9">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5fb0c9"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <TextView
            android:visibility="invisible"
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            android:text="Contact Us"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="Contact Info"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimaryLight"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:id="@+id/txt_hicabs_contact_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:padding="15dp"
                        android:text="hicabs \nNo 19, Triq Abate Rigord\nTaâ€™ Xbiex\nMalta"
                        android:textAppearance="?android:textAppearanceMedium"/>

                    <RelativeLayout
                        android:id="@+id/layout_user_contact_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/txt_hicabs_contact_address">

                        <TextView
                            android:id="@+id/txt_hicabs_contact_tel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/neavyblue"
                            android:autoLink="email"
                            android:padding="15dp"
                            android:text="Tel:\n(+356) 2137 2137"
                            android:textAppearance="?android:textAppearanceMedium"/>


                    </RelativeLayout>



                    <TextView
                        android:id="@+id/txt_hicabs_contact_email"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/layout_user_contact_tel"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:padding="15dp"
                        android:text="Email:\ninfo@hicabs.com.mt"
                        android:textAppearance="?android:textAppearanceMedium"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:visibility="invisible"
            android:layout_below="@+id/login_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/user_profile_image_background"
            android:elevation="4dp"
            android:src="@drawable/hicabs_icon" />
    </RelativeLayout>

</ScrollView>