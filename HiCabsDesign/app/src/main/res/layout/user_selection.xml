<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/user001"
            />

        <Button
            android:id="@+id/btn_user_selection"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:theme="@style/OrangeButton"
            android:text="@string/usertype_name"
            android:elevation="10dp"
            android:layout_below="@+id/img_user"
            />

        <TextView
            android:id="@+id/txt_user_selection"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_user_selection"
            android:text="@string/user_selection_msg"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/secondaryText"
            />

        <ImageView
            android:id="@+id/img_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/driver002"
            android:layout_below="@+id/txt_user_selection"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/btn_driver_selection"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:theme="@style/OrangeButton"
            android:text="@string/drivertype_name"
            android:elevation="10dp"
            android:layout_below="@+id/img_driver"

            />
        <TextView
            android:id="@+id/txt_driver_selection"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_driver_selection"
            android:text="@string/driver_selection_msg"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/secondaryText"
            />

    </RelativeLayout>

</ScrollView>