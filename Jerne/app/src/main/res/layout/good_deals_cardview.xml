<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <ImageView
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:id="@+id/person_photo"
                android:src="@drawable/jerne_gooddeals_dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/person_photo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:src="@drawable/jerne_source_marker"/>
                    <TextView
                        android:id="@+id/txt_good_deals_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dave and Buster's"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_good_deals_detail1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="50% off Eat and play combo"/>

                        <TextView
                            android:id="@+id/txt_good_deals_detail2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mission Valley 3.3mi"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/txt_good_deals_amount1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$20"
                            android:textAlignment="textEnd"/>
                        <TextView
                            android:id="@+id/txt_good_deals_amount2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$10"
                            android:textStyle="bold"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimaryLight"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>